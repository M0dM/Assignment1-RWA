<p class="alert alert-info">Edit you username or you email adress.</p>
{% if form_errors(form.username) or form_errors(form.email) or form_errors(form.current_password) %}
	<p class="alert alert-danger">
		{% if form_errors(form.username) %}
			<strong>Username error:</strong> The username is blank or already used.<br />
		{% endif %}
		{% if form_errors(form.email) %}
			<strong>Email error:</strong> Please verify the syntaxe of your email address.<br />
		{% endif %}
		{% if form_errors(form.current_password) %}
			<strong>Password error:</strong> Incorect password.<br />
		{% endif %}
	</p>
{% endif %}
<form novalidate class="form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
  {{ form_widget(form._token) }}
  <div class="control-group">
    <label class="control-label" for="inputUsername">Username</label>
    <div class="controls">
      {{ form_widget(form.username, { 'attr': { 'id': 'inputUsername', 'placeholder': 'username' } }) }}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      {{ form_widget(form.email, { 'attr': { 'id': 'inputEmail', 'placeholder': 'email' } }) }}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputPassword">Password</label>
    <div class="controls">
      {{ form_widget(form.current_password, { 'attr': { 'id': 'inputPassword', 'placeholder': 'password' } }) }}
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Submit</button>
    </div>
  </div>
</form>

